<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
               <!--경로 ex) com.javaex.vo.emaillistVo-->
              <typeAlias alias="userVo" type="com.mn.vo.UserVo" />
              <typeAlias alias="blogVo" type="com.mn.vo.BlogVo" />
              <typeAlias alias="cateVo" type="com.mn.vo.CateVo" />
              <typeAlias alias="postVo" type="com.mn.vo.PostVo" />
              <typeAlias alias="cmtVo" type="com.mn.vo.CmtVo" />
              <typeAlias alias="sVo" type="com.mn.vo.StorageVo" />
        </typeAliases>    
    <mappers>
        <!--xml 파일이 추가될 경우 아래에 계속 mapper 시켜줘야한다.-->
        <mapper resource="mybatis/mappers/user.xml" />
        <mapper resource="mybatis/mappers/admin.xml" />
        <mapper resource="mybatis/mappers/blog.xml" />
        <mapper resource="mybatis/mappers/cate.xml" />
        <mapper resource="mybatis/mappers/post.xml" />
        <mapper resource="mybatis/mappers/cmt.xml" />
    </mappers>
</configuration>